# Test for linear interface under constant velocity
# Error should be at machine precision

set Dimension                              = 2
set Start time                             = 0
set End time                               = 0.5
set Use years instead of seconds           = false
set CFL number                             = 0.5
set Output directory                       = output
set Nonlinear solver scheme                   = single Advection, no Stokes

subsection Volume of Fluid
  set Number initialization samples = 16
end

subsection Compositional fields
  set Number of fields = 2
  set Names of fields = F_1, F_2
  set Compositional field methods = volume of fluid, volume of fluid
end

subsection Mesh refinement
  set Initial adaptive refinement        = 0
  set Initial global refinement          = 3
  set Time steps between mesh refinement = 0
end

subsection Geometry model
  set Model name = box

  subsection Box
    set X extent = 1
    set Y extent = 1
  end
end

subsection Material model
  set Model name = simple
end

subsection Gravity model
  set Model name = vertical
end

subsection Initial temperature model
  set Model name = function
end

subsection Initial composition model
  set List of model names = function
  set Volume of fluid initialization type = F_1:level set, F_2:level set

  subsection Function
    set Variable names = x,y,t
    set Function constants = init=1.25, x0_0=1.0, y0_0=0.0, x0_1=0.75, y0_1=0.0, xv=-0.25, yv=-0.25
    set Function expression = cos(init*pi)*(x-x0_0-xv*t)+sin(init*pi)*(y-y0_0-yv*t);cos(init*pi)*(x-x0_1-xv*t)+sin(init*pi)*(y-y0_1-yv*t)
  end
end

subsection Prescribed Stokes solution
  set Model name = function

  subsection Velocity function
    set Variable names = x,y,t
    set Function constants = init=1.25, x0=1.0, y0=0.0, xv=-0.25, yv=-0.25
    set Function expression = xv;yv
  end
end

subsection Postprocess
  set List of postprocessors = composition statistics, volume of fluid statistics, volume of fluid mms

  subsection VoF MMS
    set Number error samples = 16
    set Time between error estimates = 0.25

    subsection True LS
      set Variable names = x,y,t
      set Function constants = init=1.25, x0_0=1.0, y0_0=0.0, x0_1=0.75, y0_1=0.0, xv=-0.25, yv=-0.25
      set Function expression = cos(init*pi)*(x-x0_0-xv*t)+sin(init*pi)*(y-y0_0-yv*t);cos(init*pi)*(x-x0_1-xv*t)+sin(init*pi)*(y-y0_1-yv*t)
    end
  end

  subsection Visualization
    set Interpolate output = false
    set Time between graphical output = 1.0
    set List of output variables = volume of fluid values

    subsection Volume of Fluid
      set Output interface reconstruction contour = true
    end
  end
end
