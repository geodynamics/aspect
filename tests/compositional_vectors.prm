set Dimension                              = 2
set End time                               = 0

subsection Geometry model
  set Model name = box
end

subsection Initial conditions
  set Model name = function
end

subsection Boundary temperature model
  set Model name = box
end

subsection Model settings
  set Fixed temperature boundary indicators   = bottom, top
  set Tangential velocity boundary indicators = left, right, bottom, top
end

subsection Gravity model
  set Model name = vertical
end

subsection Material model
  set Model name = simple
end

subsection Mesh refinement
  set Initial global refinement                = 4
  set Initial adaptive refinement              = 0
end

subsection Postprocess
  set List of postprocessors = visualization
  subsection Visualization
    set List of output variables = compositional vector
    set Output format = gnuplot    
    subsection Compositional fields as vectors
      set Names of vectors = vector_field1, vector_field2
      set Names of fields = vec1x, vec1y; vec2x, vec2y
    end
  end
end

subsection Compositional fields
  set Number of fields = 6
  set Names of fields = unrelated1, vec1x, vec1y, unrelated2, vec2x, vec2y
end

subsection Compositional initial conditions
  set Model name = function
  subsection Function
    set Function expression = 1;1;.5;1;-1;-.5
  end
end
