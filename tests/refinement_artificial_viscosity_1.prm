# Test MeshRefinement::ArtificialViscosity

set Adiabatic surface temperature          = 1623               # default: 0
set CFL number                             = 1.0
#set Composition solver tolerance           = 1e-12

# The number of space dimensions you want to run this program in.
set Dimension                              = 2

# The end time of the simulation. Units: years if the 'Use years in output
# instead of seconds' parameter is set; seconds otherwise.
set End time                               = 0.08

set Pressure normalization                 = surface
set Surface pressure                       = 0

set Use years in output instead of seconds = false

subsection Prescribed Stokes solution  
  set Model name = circle
end

set Nonlinear solver scheme                = Advection only


subsection Compositional fields
  set Number of fields = 2
  set Names of fields = Alice, Bob
end

subsection Boundary temperature model
  set List of model names = initial temperature

end

subsection Boundary composition model
  set Model name = initial composition
end


subsection Geometry model
  set Model name = box

  subsection Box
    set X extent  = 1.0
    set Y extent  = 1.0
  end
end


subsection Gravity model
  set Model name = vertical # default: 


  subsection Vertical
    # Magnitude of the gravity vector in $m/s^2$. The direction is always
    # radially outward from the center of the earth.
    set Magnitude = 0.0 # default: 30
  end

end


subsection Initial temperature model
  set Model name = function # default: 
  subsection Function
    set Function constants  = l=250000
    set Function expression = if(sqrt((x-0.5)*(x-0.5)+(y-0.5)*(y-0.5))<0.25,0.5,0.1)
    set Variable names      = x,y
  end
end

subsection Initial composition model
  set Model name = function # default: 
  subsection Function
    set Function expression = if(x+y<0.4,1.0,0.1);if((1-x)^2+y^2<0.25,0.0,100.0)
    set Variable names      = x,y
  end
end


subsection Material model

  set Model name = simple # default: 
end


subsection Mesh refinement
  set Coarsening fraction                      = 0.0
  set Refinement fraction                      = 0.3

  set Initial adaptive refinement              = 0
  set Initial global refinement                = 4
  set Strategy = artificial viscosity
  set Additional refinement times              = 0.06

  subsection Artificial viscosity
    set Temperature scaling factor = 1.0
    set Compositional field scaling factors =
  end
end


subsection Model settings
  set Fixed temperature boundary indicators   = 0,1,2,3        # default: 
  set Zero velocity boundary indicators       = 
end


subsection Postprocess

  set List of postprocessors = visualization,temperature statistics,composition statistics

  subsection Visualization

    set List of output variables      = artificial viscosity#, artificial viscosity composition

    set Number of grouped files       = 0
    set Output format                 = gnuplot
    set Time between graphical output = 0
  end

end



