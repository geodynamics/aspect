# Test for removing the net rotation in 2D spherical
# shells. 

set Dimension                              = 2
set Use years in output instead of seconds = true
set End time                               = 5.e6 #by this time net rotation will start to be evident
set Output directory                       = output


subsection Material model
  set Model name = simple

  subsection Simple model
    set Thermal expansion coefficient = 4e-5
    set Viscosity                     = 1e20
  end
end


subsection Geometry model
  set Model name = spherical shell
  subsection Spherical shell
    set Inner radius  = 3481000
    set Outer radius  = 6336000
    set Opening angle = 360
  end
end


# The parameters below this comment were created by the update script
# as replacement for the old 'Model settings' subsection. They can be
# safely merged with any existing subsections with the same name.

subsection Boundary velocity model
  set Tangential velocity boundary indicators = 0,1
end

subsection Boundary temperature model
  set Fixed temperature boundary indicators   = 0,1
end

subsection Nullspace removal
  set Remove nullspace = net rotation
end


subsection Boundary temperature model
  set List of model names = spherical constant
  subsection Spherical constant
    set Inner temperature = 100
    set Outer temperature = 0
  end
end


subsection Initial temperature model
  set Model name = spherical hexagonal perturbation
end


subsection Gravity model
  set Model name = radial constant
end


subsection Mesh refinement
  set Initial global refinement          = 2
  set Initial adaptive refinement        = 0
  set Strategy                           = temperature
  set Time steps between mesh refinement = 1 #upon refinement we tend to put more power in nullspace modes due to roundoff error and such
end


subsection Postprocess
  set List of postprocessors = velocity statistics, basic statistics, rotation statistics
  subsection Rotation statistics
    set Use constant density of one = true
  end
end
